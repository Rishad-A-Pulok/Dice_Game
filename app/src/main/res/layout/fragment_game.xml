<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameFragment">

        <TextView
            android:id="@+id/resultTV"
            android:layout_width="362dp"
            android:layout_height="119dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreTV"
            tools:text="You Win!" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restartBtn"
            android:layout_width="180dp"
            android:layout_height="74dp"
            android:layout_marginTop="12dp"
            android:text="Restart"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diceRollBtn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/diceRollBtn"
            android:layout_width="180dp"
            android:layout_height="74dp"
            android:layout_marginTop="12dp"
            android:text="Roll Dice"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultTV" />

        <TextView
            android:id="@+id/startMsgTV"
            android:layout_width="355dp"
            android:layout_height="181dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/startMsg" />

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pointTV"
            tools:text="Score: 01" />

        <TextView
            android:id="@+id/dice2TV"
            android:layout_width="142dp"
            android:layout_height="136dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:textSize="96sp"
            app:layout_constraintStart_toEndOf="@+id/dice1TV"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />

        <TextView
            android:id="@+id/dice1TV"
            android:layout_width="142dp"
            android:layout_height="136dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:textSize="96sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />

        <TextView
            android:id="@+id/pointTV"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dice2TV"
            tools:text="Point: 01" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>